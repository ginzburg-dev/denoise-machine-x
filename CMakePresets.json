{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23
    },
    "configurePresets": [
    {
        "name": "mac-cpu-debug",
        "displayName": "macOS CPU Debug",
        "generator": "Ninja",
        "binaryDir": "build-mac-debug",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "BUILD_CUDA": "OFF",
            "BUILD_TESTING": "ON"
        }
    },
    {
        "name": "linux-cuda-release",
        "displayName": "Linux CUDA Release",
        "generator": "Ninja",
        "binaryDir": "build-linux-cuda",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "BUILD_CUDA": "ON",
            "BUILD_TESTING": "ON"
        }
    },
    {
        "name": "windows-cuda-release",
        "displayName": "Windows CUDA Release",
        "generator": "Ninja",
        "binaryDir": "build-win-cuda",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "BUILD_CUDA": "ON",
            "BUILD_TESTING": "ON"
        }
    }
    ],
    "buildPresets": [
        { "name": "mac-cpu-debug", "configurePreset": "mac-cpu-debug" },
        { "name": "linux-cuda-release", "configurePreset": "linux-cuda-release" },
        { "name": "windows-cuda-release", "configurePreset": "windows-cuda-release" }
    ],
    "testPresets": [
        { "name": "mac-cpu-debug", "configurePreset": "mac-cpu-debug" },
        { "name": "linux-cuda-release", "configurePreset": "linux-cuda-release" },
        { "name": "windows-cuda-release", "configurePreset": "windows-cuda-release" }
    ]
}
